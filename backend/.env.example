# Autism Detection Platform - Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True

# Database
DATABASE_URL=sqlite:///autism_detection.db
# For PostgreSQL: postgresql://username:password@localhost:5432/autism_detection

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-to-something-long-and-random

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_FOLDER=./uploads

# ML Model
MODEL_PATH=./ml_model/autism_model.h5

# Logging
LOG_LEVEL=INFO

# Email (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
